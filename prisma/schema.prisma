generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  role     UserRole
  name     String
  username String
  password String
}

model DonationDonors {
  id       String  @id @default(uuid())
  name     String
  phone    String
  phone2   String?
  whatsapp String?

  occupation           String?
  educationalInstitute String?
  groupName            String?
  rollNumber           String?
  session              String?

  bloodGroup   String
  dateOfBirth  DateTime
  lastDonated  DateTime?
  nextDonation DateTime?

  nidNumber              String?
  birthCertificateNumber String

  presentAddress   String
  permanentAddress String
}

model DonationRequsts {
  id String @id @default(uuid())
}

enum UserRole {
  ADMIN
  MODERATOR
}
