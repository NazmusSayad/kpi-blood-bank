generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  phone       Int         @unique
  name        String
  password    String
  role        UserRole
  accountType AccountType
  bloodGroup  BloodGroup
  createdAt   DateTime    @default(now())

  nidNumber              String? @unique
  birthCertificateNumber String? @unique

  email         String?
  birthDate     DateTime?
  avatar_fileId String?
  avatar_url    String?

  student_educationalInstitute String?
  student_department           String?
  student_session              String?
  student_rollNumber           String?
  student_registrationNumber   String?

  X_donations            BloodDonation[] @relation("BloodDonationUser")
  X_donationsCreated     BloodDonation[] @relation("BloodDonationCreatedBy")
  X_donationsApproved    BloodDonation[] @relation("BloodDonationCompletionApprover")
  X_bloodRequests        BloodRequest[]  @relation("BloodRequest")
  X_requestAssignedDonor BloodRequest[]  @relation("BloodRequestAssignDonors")
}

model BloodDonation {
  id         String              @id @default(uuid())
  status     BloodDonationStatus @default(PENDING)
  bloodGroup BloodGroup

  userId Int
  user   User @relation("BloodDonationUser", fields: [userId], references: [id])

  createdBy Int
  createdAt DateTime @default(now())
  creator   User     @relation("BloodDonationCreatedBy", fields: [createdBy], references: [id])

  completionApprovedBy Int?
  completedAt          DateTime?
  completionApprover   User?     @relation("BloodDonationCompletionApprover", fields: [completionApprovedBy], references: [id])
}

model BloodRequest {
  id         String     @id @default(uuid())
  createdAt  DateTime   @default(now())
  bloodGroup BloodGroup

  userId Int
  user   User @relation("BloodRequest", fields: [userId], references: [id])

  assignDonors User[] @relation("BloodRequestAssignDonors")
}

enum UserRole {
  MEMBER
  MODERATOR
  ADMIN
  SUPER_ADMIN
}

enum AccountType {
  GUEST
  STUDENT
  TEACHER
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
}

enum BloodDonationStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}
